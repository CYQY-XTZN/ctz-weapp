  font-size: 36rpx;
  color: #FFFFFF;
}
.header-nav .title {
  font-size: 36rpx;
  font-weight: 700;
  color: #FFFFFF;
}
.header-nav .nav-placeholder {
  width: 60rpx;
}
.time-title {
  position: absolute;
  top: 100rpx;
  left: 0;
  right: 0;
  text-align: center;
  z-index: 10;
}
.time-title .title-text {
  font-size: 34rpx;
  color: rgba(255, 255, 255, 0.95);
  font-weight: 700;
  text-shadow: 0 2rpx 15rpx rgba(0, 0, 0, 0.7);
  letter-spacing: 2rpx;
}
