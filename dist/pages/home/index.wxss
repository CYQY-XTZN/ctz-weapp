.home-container {
  height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #e4e8f0 100%);
}

.status-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 40rpx;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(10rpx);
  position: sticky;
  top: 0;
  z-index: 1000;
}

.time {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  font-family: "SF Mono", monospace;
}

.battery {
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
}

.user-section {
  padding: 40rpx 40rpx 30rpx;
  background: white;
  border-bottom-left-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.05);
}

.greeting {
  display: block;
  font-size: 40rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 20rpx;
}

.constellation {
  display: block;
  font-size: 48rpx;
  font-weight: 800;
  color: #667eea;
  margin-bottom: 10rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.constellation-detail {
  display: block;
  font-size: 28rpx;
  color: #999;
  font-weight: 400;
}

.luck-card {
  margin: 0 40rpx 40rpx;
  background: white;
  border-radius: 30rpx;
  padding: 40rpx;
  box-shadow: 0 15rpx 35rpx rgba(0, 0, 0, 0.08);
}

.luck-header {
  margin-bottom: 40rpx;
  border-bottom: 2rpx solid #f0f0f0;
  padding-bottom: 20rpx;
}

.luck-title {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 10rpx;
}

.luck-date {
  display: block;
  font-size: 28rpx;
  color: #999;
  font-weight: 400;
}

.luck-content {
  margin-bottom: 40rpx;
}

.luck-constellation {
  display: block;
  font-size: 42rpx;
  font-weight: 800;
  color: #667eea;
  margin-bottom: 30rpx;
  text-align: center;
}

.luck-progress {
  display: flex;
  align-items: center;
  gap: 30rpx;
  margin-bottom: 40rpx;
}

.luck-progress-bar {
  flex: 1;
  height: 20rpx;
  background: #f0f0f0;
  border-radius: 10rpx;
  overflow: hidden;
}

.luck-progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
  border-radius: 10rpx;
  transition: width 0.5s ease;
}

.luck-percentage {
  font-size: 36rpx;
  font-weight: 700;
  color: #667eea;
  min-width: 80rpx;
  text-align: right;
  font-family: "SF Mono", monospace;
}

.luck-description {
  display: block;
  font-size: 30rpx;
  color: #666;
  line-height: 1.6;
  font-weight: 400;
}

.view-more-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 45rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s ease;
}

.view-more-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 5rpx 15rpx rgba(102, 126, 234, 0.3);
}

.menu-section {
  margin: 0 40rpx 40rpx;
}

.menu-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 30rpx;
}

.menu-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 20rpx;
  background: white;
  border-radius: 25rpx;
  box-shadow: 0 10rpx 25rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
  cursor: pointer;
}

.menu-item:active {
  transform: translateY(2rpx);
  box-shadow: 0 5rpx 15rpx rgba(0, 0, 0, 0.05);
}

.menu-icon {
  font-size: 60rpx;
  margin-bottom: 20rpx;
}

.menu-label {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.bottom-nav {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
  border-top: 2rpx solid #f0f0f0;
  z-index: 1000;
}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  opacity: 0.5;
  transition: all 0.3s ease;
}

.nav-item.active {
  opacity: 1;
}

.nav-item.active .nav-icon {
  color: #667eea;
}

.nav-item.active .nav-label {
  color: #667eea;
}

.nav-icon {
  font-size: 40rpx;
  margin-bottom: 8rpx;
  color: #999;
}

.nav-label {
  font-size: 24rpx;
  color: #999;
  font-weight: 500;
}
